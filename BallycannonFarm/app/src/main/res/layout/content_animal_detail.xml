<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AnimalDetailActivity"
    tools:showIn="@layout/activity_animal_detail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal Tag"/>

    <TextView
        android:id="@+id/detail_tag"
        android:text="Animal Tag goes here"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal Breed"/>

    <TextView
        android:id="@+id/detail_breed"
        android:text="Enter Animal Breed here"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal Family name"/>

    <TextView
        android:id="@+id/detail_nickname"
        android:text="Enter Family Name here"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal Health"/>

    <TextView
        android:id="@+id/detail_health"
        android:text="Enter Classification Points here"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal Photo"/>
	
    <ImageView
        android:id="@+id/detail_photo"
        android:layout_width="match_parent"
        android:layout_height="319dp" />

</LinearLayout>